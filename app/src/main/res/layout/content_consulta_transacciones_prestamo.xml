<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_consulta_transacciones_prestamo"
    tools:context="com.chibuleo.sfcmovil.ConsultaTransaccionesPrestamo"
    android:padding="0dp">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:id="@+id/imageView"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:src="@mipmap/logoch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Usuario:"
        android:id="@+id/lblTituloUsuario"
        android:layout_x="155dp"
        android:layout_y="5dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblUsuario"
        android:layout_x="210dp"
        android:layout_y="5dp"
        android:textColor="@color/colorEtiquetaTitulo"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblFecha"
        android:layout_x="210dp"
        android:layout_y="25dp"
        android:textColor="@color/colorEtiquetaTitulo"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha:"
        android:id="@+id/lblTituloFecha"
        android:layout_x="155dp"
        android:layout_y="25dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <View android:id="@+id/primerdivisor"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_x="0dp"
        android:layout_y="45dp"/>


    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_x="0dp"
        android:layout_y="122dp"
        android:background="#000000" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="0dp"
        android:layout_y="50dp"
        android:fillViewport="false">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="50dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/lblNumeroCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° Cliente:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblPagare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagaré:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblPrestamo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Préstamo:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_x="62dp"
                android:layout_y="0dp"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/txtNumeroCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Numero Cliente"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#60020f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Nombre:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#60020f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPagare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Pagare"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#60020f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrestamo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Prestamo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#60020f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ListView
                android:id="@+id/lstvTransaccionesPrestamo"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_x="0dp"
                android:layout_y="72dp"
                android:choiceMode="singleChoice"
                android:clickable="true"
                android:divider="@drawable/divisor_list_view"
                android:dividerHeight="2dp"
                android:smoothScrollbar="true" />

        </AbsoluteLayout>
    </ScrollView>

</AbsoluteLayout>
