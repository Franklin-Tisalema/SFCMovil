<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtNombre"
            android:layout_column="0"
            android:gravity="left"
            android:layout_span="3"
            android:text="NombreCliente"
            android:padding="0dp"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/txtNumeroCliente"
            android:layout_column="0"
            android:gravity="left"
            android:text="NumeroCliente"
            android:layout_height="wrap_content"
            android:layout_width="10dp"
            android:layout_span="1"
            android:padding="0dp"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
        <TextView
            android:id="@+id/txtNumeroTelefono"
            android:layout_column="0"
            android:gravity="left"
            android:text="Telefono"
            android:layout_height="wrap_content"
            android:layout_width="10dp"
            android:layout_span="1"
            android:padding="0dp"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
        <TextView
            android:id="@+id/txtDiasMora"
            android:layout_column="0"
            android:padding="0dp"
            android:gravity="left"
            android:text="Dias Mora"
            android:layout_height="wrap_content"
            android:layout_width="10dp"
            android:layout_span="1"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
        <TextView
            android:id="@+id/txtSaldoAhorros"
            android:layout_column="0"
            android:padding="0dp"
            android:gravity="left"
            android:text="Saldo Ahorros"
            android:layout_height="wrap_content"
            android:layout_width="10dp"
            android:layout_span="1"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
     </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtDireccion"
            android:layout_column="0"
            android:gravity="left"
            android:layout_span="3"
            android:text="Direccion"
            android:padding="0dp"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtGarante1"
            android:layout_column="0"
            android:gravity="left"
            android:layout_span="3"
            android:text="Garante1"
            android:padding="0dp"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtGarante2"
            android:layout_column="0"
            android:gravity="left"
            android:layout_span="3"
            android:text="Garante2"
            android:padding="0dp"
            android:textColor="#3c0303"
            android:textSize="10dp">
        </TextView>
    </TableRow>

</TableLayout>