<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollIndicators="right|end"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cotizadordpf"
    tools:context="com.chibuleo.sfcmovil.CotizadorDPF"
    android:padding="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Usuario:"
        android:id="@+id/lblTituloUsuario"
        android:layout_x="155dp"
        android:layout_y="5dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblUsuario"
        android:layout_x="210dp"
        android:layout_y="5dp"
        android:textColor="@color/colorEtiquetaTitulo"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblFecha"
        android:layout_x="210dp"
        android:layout_y="25dp"
        android:textColor="@color/colorEtiquetaTitulo"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha:"
        android:id="@+id/lblTituloFecha"
        android:layout_x="155dp"
        android:layout_y="25dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <View android:id="@+id/primerdivisor"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_x="0dp"
        android:layout_y="45dp"/>

    <ImageView
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:id="@+id/imageView"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:src="@mipmap/logoch" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="0dp"
        android:layout_y="50dp">

        <AbsoluteLayout
            android:id="@+id/alPrincipal"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_x="0dp"
            android:layout_y="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scrollIndicators="bottom|right">

            <EditText
                android:id="@+id/txtNetoARecibir"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_x="85dp"
                android:layout_y="320dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF3333"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblNetoARecibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="330dp"
                android:text="A Recibir:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txtRetencion"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_x="85dp"
                android:layout_y="280dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF3333"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblRetencion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="290dp"
                android:text="Retención:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblInteres"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="250dp"
                android:text="Interés:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txtInteres"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_x="85dp"
                android:layout_y="240dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF3333"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/lblSobreTasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="140dp"
                android:text="S. Tasa:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtSobreTasa"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="130dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Ej: -0.5"
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="5"
                android:numeric="signed|decimal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:inputType="number" />

            <TextView
                android:id="@+id/lblMonto"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="10dp"
                android:text="Monto:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtPlazo"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="45dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Ej: 360"
                android:inputType="number"
                android:maxLength="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:inputType="number" />

            <EditText
                android:id="@+id/txtTasa"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="88dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Ej: 5.5"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lblPlazo"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="55dp"
                android:text="Plazo:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblTasa"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="100dp"
                android:text="Tasa:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="0dp"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Ej: 1200"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btnObtenerTasa"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_x="190dp"
                android:layout_y="88dp"
                android:background="@drawable/boton_borde_redondo_fondo_rojo"
                android:text="Obtener Tasa"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_x="160dp"
                android:layout_y="190dp"
                android:background="@drawable/borde_fondo_rojo"
                android:text="LIMPIAR"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_x="0dp"
                android:layout_y="190dp"
                android:background="@drawable/borde_fondo_azul"
                android:text="CALCULAR"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chkEsIFI"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_x="190dp"
                android:layout_y="135dp"
                android:checked="false"
                android:padding="0dp"
                android:text="Es IFI"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chkPeriodico"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_x="190dp"
                android:layout_y="45dp"
                android:checked="false"
                android:padding="0dp"
                android:text="Periódico"
                android:textStyle="bold" />

        </AbsoluteLayout>
    </ScrollView>

    <!-- <View android:id="@+id/tercerdivisor"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#fe0808"
        android:layout_x="0dp"
        android:layout_y="365dp"/>-->


</AbsoluteLayout>
